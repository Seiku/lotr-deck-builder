<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smith.lotrdeckbuilder" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Lotr" >
        <activity
            android:name="com.smith.lotrdeckbuilder.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smith.lotrdeckbuilder.SettingsActivity"
            android:label="@string/menu_options" >
        </activity>
        <activity
            android:name="com.smith.lotrdeckbuilder.ViewImageActivity"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.smith.lotrdeckbuilder.ChooseIdentityActivity"
            android:label="@string/title_activity_choose_identity" >
        </activity>
        <activity
            android:name="com.smith.lotrdeckbuilder.ViewDeckFullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_deck_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
